<!DOCTYPE html>
<html>
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body style="background-color: black; color: beige;">
    <div class="container login-container">
      <div class="col-sm-6 mt-5 col-sm-offset-3">
        <h1> Login OR</h1>


        <!-- LOGIN FORM -->
        <form action="/login" method="post">
          <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" name="username" />
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" />
          </div>
          <button type="submit" class="btn btn-sm btn-primary mt-3 ml-2">
            Login
          </button>
        </form>
        <hr />
        <a href="/">Home</a><br />
        <a class="button google" href="/login/federated/google">Sign in with Google</a>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
      integrity="undefined"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
